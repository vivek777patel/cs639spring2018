<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/vertical_margin"
    android:weightSum="5.5"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5.5">
    <ListView
        android:id="@+id/imgTxtViewLstView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></ListView>
        <!--<android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/vertical_margin"
        >

        <EditText
            android:id="@+id/descAddEditText"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginTop="@dimen/vertical_margin"
            />

        <Button
            android:id="@+id/descAddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_button"
            android:layout_marginTop="@dimen/vertical_margin"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomBtnLL"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin"
        android:gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.5"
        >

        <ImageButton
            android:id="@+id/colorBtn1"
            android:layout_width="@dimen/bottom_button_width"
            android:layout_height="@dimen/bottom_button_height"
            android:background="@color/colorBlueShed" />

        <ImageButton
            android:id="@+id/colorBtn2"
            android:layout_width="@dimen/bottom_button_width"
            android:layout_height="@dimen/bottom_button_height"
            android:background="@color/colorOrangeShed"
            android:layout_marginLeft="@dimen/bottom_button_margin_left"
            />

        <ImageButton
            android:id="@+id/colorBtn3"
            android:layout_width="@dimen/bottom_button_width"
            android:layout_height="@dimen/bottom_button_height"
            android:background="@color/colorPinkShed"
            android:layout_marginLeft="@dimen/bottom_button_margin_left"
            />

        <ImageButton
            android:id="@+id/colorBtn4"
            android:layout_width="@dimen/bottom_button_width"
            android:layout_height="@dimen/bottom_button_height"
            android:background="@color/colorTealShed"
            android:layout_marginLeft="@dimen/bottom_button_margin_left"
            />

        <ImageButton
            android:id="@+id/colorBtn5"
            android:layout_width="@dimen/bottom_button_width"
            android:layout_height="@dimen/bottom_button_height"
            android:background="@color/colorGreenShed"
            android:layout_marginLeft="@dimen/bottom_button_margin_left"
            />


    </LinearLayout>

</LinearLayout>